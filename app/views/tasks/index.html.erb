<h1>Tasks</h1>

<table class="table table-light">
  <thead class="thead-light">
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th>Completed at</th>
      <th>#</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.author_id %></td>
        <td><%= task.title %></td>
        <td><%= truncate task.description %></td>
        <td><%= l(task.completed_at) if task.completed_at %></td>
        <td>
          <div class="btn-group" role="group" aria-label="Actions`">
            <%= link_to 'Show', task, class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-secondary' %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
