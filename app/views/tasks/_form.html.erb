      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.collection_select :author_id, Author.all, :id, :name, include_blank: true %>
  </div>

