    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.date_select :completed_at, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
